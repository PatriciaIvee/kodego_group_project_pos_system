<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.orders.OrdersFragment">

   <TextView
       android:id="@+id/text_orders"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/order"
       android:textSize="40sp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/btn_charge"
       />

    <TextView
        android:id="@+id/text_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginStart="6dp"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_orders"
        app:layout_constraintBottom_toTopOf="@id/btn_charge"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_charge"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Charge \n 00.00"
        app:layout_constraintBottom_toTopOf="@id/text_total_amount_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_orders" />

    <!-- This Can Be Removed since the button can have the amount-->
    <TextView
        android:id="@+id/text_total_amount_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/item_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_charge" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/item_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/btn_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_item"
        app:layout_constraintTop_toBottomOf="@+id/text_total_amount_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/recycler_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_spinner"
        app:layout_constraintTop_toBottomOf="@+id/text_total_amount_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_item"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>